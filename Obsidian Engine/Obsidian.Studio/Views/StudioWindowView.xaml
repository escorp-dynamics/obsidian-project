    <mahapps:MetroWindow.RightWindowCommands>
        <mahapps:WindowCommands>
            <Button ToolTip="{DynamicResource StrGlobalSettingsTooltip}"
                    Style="{DynamicResource MetroWindowButtonStyle}"
                    cal:Message.Attach="[Event Click] = [Action OnGlobalSettingsShow()]">
                <iconPacks:PackIconCodicons Kind="Settings" />
            </Button>
        </mahapps:WindowCommands>
    </mahapps:MetroWindow.RightWindowCommands>

    <mahapps:MetroWindow.TitleTemplate>
        <DataTemplate>
            <fluent:RibbonTitleBar x:Name="ribbonTitleBar" Header="{Binding Path=Title, RelativeSource={RelativeSource AncestorType=Window}}" Background="Red"/>
        </DataTemplate>
    </mahapps:MetroWindow.TitleTemplate>
    
