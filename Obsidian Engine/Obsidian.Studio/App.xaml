<Application x:Class="Obsidian.Studio.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Obsidian.Studio"
             xmlns:gemini="http://schemas.timjones.io/gemini">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <local:AppBootstrapper x:Key="bootstrapper" />
                </ResourceDictionary>

                <ResourceDictionary Source="pack://application:,,,/Gemini;Component/Themes/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Gemini;component/Themes/VS2013/DarkTheme.xaml" />

                <ResourceDictionary Source="pack://application:,,,/Fluent;Component/Themes/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Fluent;component/Themes/Themes/Dark.Steel.xaml" />

                <ResourceDictionary Source="Resources/Images/All.xaml" />
                <ResourceDictionary Source="Resources/Themes/Obsidian/Styles/All.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
